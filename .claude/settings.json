{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/configure.sh",
            "statusMessage": "Configuring prl (pearls) issue tracker..."
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/configure.sh --resume",
            "statusMessage": "Configuring prl (pearls) issue tracker..."
          }
        ]
      }
    ]
  }
}
